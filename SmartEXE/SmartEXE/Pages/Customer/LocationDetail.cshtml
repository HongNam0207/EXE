@page
@model SmartEXE.Pages.Customer.LocationDetailModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@Model.Location.Name - AILENS</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap-icons.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container py-5">
        <a href="/Customer/Map#loc-@Model.Location.Id" class="btn btn-outline-secondary mb-4">
            ← Quay lại bản đồ
        </a>

        <div class="card shadow-sm p-4">
            <h2 class="text-primary">@Model.Location.Name</h2>
            <p class="text-muted mb-3">@Model.Location.Type</p>

            @if (!string.IsNullOrEmpty(Model.Location.ImageUrl))
            {
                <img src="@Model.Location.ImageUrl" alt="@Model.Location.Name"
                     class="img-fluid rounded mb-4" style="max-height:400px;object-fit:cover;">
            }

            <p>@Model.Location.Description</p>

            @if (!string.IsNullOrEmpty(Model.Location.GlbModelUrl))
            {
                <div class="mt-3">
                    <a href="@Model.Location.GlbModelUrl" target="_blank" class="btn btn-outline-primary">
                        🔗 Xem mô hình 3D
                    </a>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.Location.QrCodeUrl))
            {
                <div class="mt-3">
                    <h6>QR Code:</h6>
                    <img src="@Model.Location.QrCodeUrl" width="150" alt="QR Code" class="border rounded p-2" />
                </div>
            }

            <p class="text-muted mt-3 small">
                📍 Tọa độ: @Model.Location.Coordinates<br />
                ⏱️ Cập nhật: @(Model.Location.UpdatedAt?.ToString("dd/MM/yyyy HH:mm"))
            </p>
        </div>
    </div>

</body>
</html>
