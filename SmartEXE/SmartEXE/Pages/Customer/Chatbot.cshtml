@page
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Trợ lý ảo - AILENS</title>

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/templatemo-topic-listing.css" rel="stylesheet" />
</head>

<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" asp-page="/Customer/Home">
                <i class="bi-back"></i>
                <span>AILENS</span>
            </a>
        </div>
    </nav>

    <main class="text-center">
        <section class="hero-section d-flex justify-content-center align-items-center">
            <div class="container text-center text-white">
                <h1>Trợ lý ảo AI</h1>
                <p>Hỏi gì cũng biết — AILENS luôn sẵn sàng 🤖</p>
            </div>
        </section>

        <div class="container my-5">
            <div class="card shadow-lg mx-auto" style="max-width:700px;">
                <div class="card-body">
                    <div id="chatLog" style="height:350px; overflow-y:auto; border:1px solid #ccc; padding:10px;">
                        <p><b>AI:</b> Xin chào! Mình có thể giúp gì cho bạn hôm nay?</p>
                    </div>
                    <div class="input-group mt-3">
                        <input id="userInput" type="text" class="form-control" placeholder="Nhập câu hỏi..." />
                        <button class="btn btn-primary" onclick="sendMsg()">Gửi</button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script>
        function sendMsg() {
            const input = document.getElementById("userInput");
            const log = document.getElementById("chatLog");
            const msg = input.value.trim();
            if (!msg) return;
            log.innerHTML += `<div><b>Bạn:</b> ${msg}</div>`;
            input.value = '';
            setTimeout(() => {
                log.innerHTML += `<div><b>AI:</b> Mình đang xử lý câu hỏi "${msg}"...</div>`;
                log.scrollTop = log.scrollHeight;
            }, 500);
        }
    </script>
</body>
</html>
