@page
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Quét bằng Camera - AILENS</title>

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/templatemo-topic-listing.css" rel="stylesheet" />
</head>

<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" asp-page="/Customer/Home">
                <i class="bi-back"></i>
                <span>AILENS</span>
            </a>
        </div>
    </nav>

    <main>
        <section class="hero-section d-flex justify-content-center align-items-center">
            <div class="container text-center text-white">
                <h1>📷 Quét bằng Camera</h1>
                <p>Nhận diện cảnh quan và địa điểm bằng AI</p>
            </div>
        </section>

        <section class="section-padding">
            <div class="container text-center">
                <div class="custom-block bg-white shadow p-5 rounded">
                    <p class="mb-4">Bấm vào nút dưới đây để khởi động camera và quét cảnh vật.</p>
                    <button class="btn custom-btn btn-lg" onclick="openCamera()">🎥 Bắt đầu quét</button>
                    <video id="camera" autoplay playsinline style="display:none; margin-top:20px; border-radius:10px;"></video>
                </div>
            </div>
        </section>
    </main>

    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script>
        function openCamera() {
            const video = document.getElementById('camera');
            navigator.mediaDevices.getUserMedia({ video: true })
                .then(stream => {
                    video.srcObject = stream;
                    video.style.display = 'block';
                })
                .catch(err => alert("Không thể mở camera: " + err));
        }
    </script>
</body>
</html>
